<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView1" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView2" />

            <Button
                android:id="@+id/paint_activity_validateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/valider_text"/>

        </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

        <Button
            android:id="@+id/paint_activity_blueButton"
            style="@style/ColoredButton"
            android:backgroundTint="@color/BLUE"
            android:onClick="changeColorToBlue"/>
        <Button
            android:id="@+id/paint_activity_greenButton"
            style="@style/ColoredButton"
            android:backgroundTint="@color/GREEN"
            android:onClick="changeColorToGreen"/>

        <Button
            android:id="@+id/paint_activity_redButton"
            style="@style/ColoredButton"
            android:backgroundTint="@color/RED"
            android:onClick="changeColorToRed"/>
        <Button
            android:id="@+id/paint_activity_yellowButton"
            style="@style/ColoredButton"
            android:backgroundTint="@color/YELLOW"
            android:onClick="changeColorToYellow"/>
        <Button
            android:id="@+id/paint_activity_blackButton"
            style="@style/ColoredButton"
            android:backgroundTint="@color/BLACK"
            android:onClick="changeColorToBlack"/>

        <Button
            android:id="@+id/paint_activity_backButton"
            style="@style/ColoredButton"
            android:text="@string/paintActivity_back_text"
            android:onClick="back"/>
    </LinearLayout>

    <iut.projet.paint.PaintView
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>