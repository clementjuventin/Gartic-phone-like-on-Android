<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/paint_activity_chrono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="40dp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/paint_activity_expression"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="40dp"
                android:textStyle="bold"
                android:layout_weight="5"/>

        </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

        <Button
            android:id="@+id/paint_activity_blueButton"
            style="@style/ColoredButton"
            android:backgroundTint="@color/BLUE"/>
        <Button
            android:id="@+id/paint_activity_greenButton"
            style="@style/ColoredButton"
            android:backgroundTint="@color/GREEN"/>

        <Button
            android:id="@+id/paint_activity_redButton"
            style="@style/ColoredButton"
            android:backgroundTint="@color/RED"/>
        <Button
            android:id="@+id/paint_activity_yellowButton"
            style="@style/ColoredButton"
            android:backgroundTint="@color/YELLOW"/>
        <Button
            android:id="@+id/paint_activity_blackButton"
            style="@style/ColoredButton"
            android:backgroundTint="@color/BLACK"/>

        <Button
            android:id="@+id/paint_activity_backButton"
            style="@style/ColoredButton"
            android:text="@string/back_arrow"/>
    </LinearLayout>

    <iut.projet.model.paint.PaintView
        android:id="@+id/paintView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>