<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/joinActivity_code"
        android:hint="@string/joinActivity_code_hint"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/joinActivity_pseudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/joinActivity_pseudo_hint"
        android:inputType="textPersonName"
        android:text="" />

    <Button
        android:id="@+id/joinActivity_entrer_button"
        android:text="@string/entrer_text"
        style="@style/EditText"
        />
</LinearLayout>